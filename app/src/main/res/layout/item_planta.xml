<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardPlanta"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeWidth="1dp"
    app:strokeColor="@color/teal_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- FOTO -->
        <ImageView
            android:id="@+id/imgPlanta"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:background="#EEEEEE"
            android:clipToOutline="true"
            app:shapeAppearanceOverlay="@style/ImageRounded"/>

        <!-- INFO -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- NOMBRE -->
            <TextView
                android:id="@+id/txtFamiliaEspecie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="2dp"/>

            <!-- NUMERO -->
            <TextView
                android:id="@+id/txtNumero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp"/>

            <!-- CANTIDAD -->
            <TextView
                android:id="@+id/txtCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginTop="6dp"/>

            <!-- BADGE ESTADO -->
            <TextView
                android:id="@+id/txtVenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_badge_estado"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>