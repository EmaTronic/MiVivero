<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeColor="#EEEEEE"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- NOMBRE DEL ÁLBUM -->
        <TextView
            android:id="@+id/txtNombreAlbum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txtEstadoAlbum"/>

        <!-- BADGE ESTADO -->
        <TextView
            android:id="@+id/txtEstadoAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@drawable/bg_estado_borrador"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- OBSERVACIONES -->
        <TextView
            android:id="@+id/txtObservaciones"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#616161"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/txtNombreAlbum"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- CANTIDAD DE PLANTAS -->
        <TextView
            android:id="@+id/txtCantidadPlantas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_primary"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/txtObservaciones"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- BOTÓN ELIMINAR -->
        <ImageButton
            android:id="@+id/btnEliminarAlbum"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="@string/eliminar_album"
            app:tint="#E53935"
            app:layout_constraintTop_toBottomOf="@id/txtEstadoAlbum"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- BOTÓN PUBLICAR -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPublicar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/publicar"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/teal_primary"
            app:cornerRadius="12dp"
            android:drawableStart="@drawable/ic_rocket"
            android:drawablePadding="6dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/txtCantidadPlantas"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
