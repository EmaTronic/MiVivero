<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">


    <ImageView
        android:id="@+id/btnUsuario"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="12dp"
        android:src="@drawable/ic_usuario"
        android:layout_alignParentEnd="true"/>

    <!-- ðŸ”¹ GRID CENTRAL DE ACCIONES -->
    <GridLayout
        android:id="@+id/gridAcciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnVerPlantas"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:padding="15dp"
            android:text="Plantas"
            android:textSize="15sp"
            android:backgroundTint="#7FD1C3"/>

        <Button
            android:id="@+id/btnVerAlbumes"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:padding="15dp"
            android:text="Ãlbumes"
            android:textSize="15sp"
            android:backgroundTint="#7FD1C3"/>

        <Button
            android:id="@+id/btnCrearPlanta"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:padding="15dp"
            android:text="Nueva\nPlanta"
            android:textSize="15sp"
            android:backgroundTint="#7FD1C3"/>

        <Button
            android:id="@+id/btnCrearAlbum"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:padding="15dp"
            android:text="Nuevo\nÃlbum"
            android:textSize="15sp"
            android:backgroundTint="#7FD1C3"/>



        <Button
            android:id="@+id/btnRegistroUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar usuario"
            android:layout_marginTop="12dp"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
