<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Datos de la planta -->
    <TextView
        android:id="@+id/txtDetalleNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtDetalleFamilia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtDetalleEspecie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtDetalleCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- BotÃ³n agregar foto -->
    <Button
        android:id="@+id/btnAgregarFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar foto"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnSacarFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sacar foto"
        android:layout_marginTop="8dp" />


    <ImageView
        android:id="@+id/imgPlantaTest"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/planta_test" />



    <!-- Lista de fotos (por ahora solo texto) -->
    <LinearLayout
        android:id="@+id/layoutFotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp" />

</LinearLayout>
