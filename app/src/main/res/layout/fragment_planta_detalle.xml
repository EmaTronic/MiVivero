<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- FOTO PRINCIPAL CON MARCO -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginBottom="16dp">

            <!-- FOTO PRINCIPAL -->
            <ImageView
                android:id="@+id/imgDetallePlanta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#E0E0E0" />

            <!-- OVERLAY 4 ESPACIOS -->
            <LinearLayout
                android:id="@+id/layoutOverlayFotos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- FILA 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <FrameLayout
                        android:id="@+id/slot1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_foto_slot"/>

                    <FrameLayout
                        android:id="@+id/slot2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_foto_slot"/>
                </LinearLayout>

                <!-- FILA 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/slot3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_foto_slot"/>

                    <FrameLayout
                        android:id="@+id/slot4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_foto_slot"/>
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <!-- GALERÃA HORIZONTAL -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerFotos"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false"/>

        <!-- DATOS -->
        <TextView
            android:id="@+id/txtFamilia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/txtEspecie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#616161"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/txtCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#424242"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/txtVenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/teal_primary"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/txtFechaFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:textStyle="italic"
            android:layout_marginTop="16dp"/>

        <!-- BOTONES -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar planta"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/teal_light"
            android:textColor="@color/teal_primary"/>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAgregarFotoExtra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar otra foto"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/teal_light"
            android:textColor="@color/teal_primary"/>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCompararFotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comparar fotos"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/teal_primary"
            android:textColor="@android:color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar planta"
            android:layout_marginTop="12dp"
            android:backgroundTint="#E53935"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>
