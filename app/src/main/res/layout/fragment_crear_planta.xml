<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAF9">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear planta"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="20dp"/>

            <AutoCompleteTextView
                android:id="@+id/actFamilia"
                style="@style/FormInput"
                android:hint="Familia (opcional)"/>

            <AutoCompleteTextView
                android:id="@+id/etFamilia"
                style="@style/FormInput"
                android:hint="Género o nombre vulgar"/>

            <AutoCompleteTextView
                android:id="@+id/etEspecie"
                style="@style/FormInput"
                android:hint="Especie (opcional)"/>

            <EditText
                android:id="@+id/etLugar"
                style="@style/FormInput"
                android:hint="Lugar"/>

            <EditText
                android:id="@+id/etCantidad"
                style="@style/FormInput"
                android:hint="Cantidad"
                android:inputType="number"/>

            <CheckBox
                android:id="@+id/cbALaVenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponible para la venta"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etObservaciones"
                style="@style/FormInput"
                android:hint="Observaciones"
                android:minLines="3"
                android:gravity="top"
                android:inputType="textMultiLine"/>

            <ImageView
                android:id="@+id/imgFoto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="#E0E0E0"/>

            <Button
                android:id="@+id/btnGaleria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elegir de galería"
                android:layout_marginTop="12dp"
                android:backgroundTint="#00796B"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sacar foto"
                android:layout_marginTop="8dp"
                android:backgroundTint="#009688"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Guardar planta"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="#004D40"
                android:layout_marginTop="24dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
