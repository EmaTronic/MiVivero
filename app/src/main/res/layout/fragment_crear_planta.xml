<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="8dp">

    <!-- ðŸª´ TÃTULO -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREAR PLANTA"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="6dp"/>

    <!-- ðŸŒ¿ FAMILIA -->
    <AutoCompleteTextView
        android:id="@+id/actFamilia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Familia (opcional)"
        android:padding="8dp"
        android:backgroundTint="#7FD1C3"
        app:layout_constraintTop_toBottomOf="@id/txtTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:textColor="@android:color/black"
        android:textColorHint="#666666"/>

    <!-- ðŸŒ± GÃ‰NERO -->
    <AutoCompleteTextView
        android:id="@+id/etFamilia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="GÃ©nero o nombre vulgar"
        android:padding="8dp"
        android:backgroundTint="#7FD1C3"
        app:layout_constraintTop_toBottomOf="@id/actFamilia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:textColorHint="#666666"
        />

    <!-- ðŸŒ¸ ESPECIE -->
    <AutoCompleteTextView
        android:id="@+id/etEspecie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Especie (opcional)"
        android:padding="8dp"
        android:backgroundTint="#7FD1C3"
        app:layout_constraintTop_toBottomOf="@id/etFamilia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:textColorHint="#666666"/>

    <!-- ðŸ“ LUGAR -->
    <EditText
        android:id="@+id/etLugar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Lugar"
        android:padding="8dp"
        android:backgroundTint="#7FD1C3"
        app:layout_constraintTop_toBottomOf="@id/etEspecie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:textColorHint="#666666"/>

    <!-- ðŸ“¦ CANTIDAD -->
    <EditText
        android:id="@+id/etCantidad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Cantidad"
        android:inputType="number"
        android:padding="8dp"
        android:backgroundTint="#7FD1C3"
        app:layout_constraintTop_toBottomOf="@id/etLugar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:textColorHint="#666666"/>

    <!-- ðŸ’° A LA VENTA -->
    <CheckBox
        android:id="@+id/cbALaVenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disponible para la venta"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/etCantidad"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        android:textColorHint="#666666"/>

    <!-- ðŸ“ OBSERVACIONES -->
    <EditText
        android:id="@+id/etObservaciones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Observaciones"
        android:minLines="2"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:padding="8dp"
        android:backgroundTint="#7FD1C3"
        app:layout_constraintTop_toBottomOf="@id/cbALaVenta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        android:textColorHint="#666666"/>

    <!-- ðŸ“¸ FOTO -->
    <ImageView
        android:id="@+id/imgFoto"
        android:layout_width="120dp"
        android:layout_height="120dp"

        android:background="#DDDDDD"
        app:layout_constraintTop_toBottomOf="@id/etObservaciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>

    <!-- ðŸ“‚ GALERÃA -->
    <Button
        android:id="@+id/btnGaleria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Elegir de la galerÃ­a"
        android:backgroundTint="#7FD1C3"
        app:layout_constraintTop_toBottomOf="@id/imgFoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>

    <!-- ðŸ“· CÃMARA -->
    <Button
        android:id="@+id/btnFoto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sacar foto"
        android:backgroundTint="#7FD1C3"
        app:layout_constraintTop_toBottomOf="@id/btnGaleria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <View
        android:id="@+id/espacioFlexible"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnFoto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ðŸ’¾ GUARDAR (CENTRADO Y MÃS GRANDE) -->
    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Guardar planta"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/btn_disabled"
        android:enabled="false"
        app:layout_constraintTop_toTopOf="@id/espacioFlexible"
        app:layout_constraintBottom_toBottomOf="@id/espacioFlexible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
