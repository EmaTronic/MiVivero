<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ðŸª´ DATOS PRINCIPALES -->
        <EditText
            android:id="@+id/etFamilia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Familia"
            android:padding="12dp"
            android:backgroundTint="#7FD1C3"
            android:textColor="@android:color/black"
            android:textColorHint="#666666" />


        <EditText
            android:id="@+id/etEspecie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Especie (opcional)"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#7FD1C3"
            android:textColor="@android:color/black"
            android:textColorHint="#666666" />

        <EditText
            android:id="@+id/etLugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lugar"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#7FD1C3"
            android:textColor="@android:color/black"
            android:textColorHint="#666666" />

        <EditText
            android:id="@+id/etCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cantidad"
            android:inputType="number"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#7FD1C3"
            android:textColor="@android:color/black"
            android:textColorHint="#666666" />

        <CheckBox
            android:id="@+id/cbALaVenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disponible para la venta"
            android:textColor="@android:color/black"
            android:textColorHint="#666666"
            android:layout_marginTop="12dp" />

        <!-- ðŸ“ OBSERVACIONES -->
        <EditText
            android:id="@+id/etObservaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Observaciones (ej. nombre vulgar)"
            android:textColor="@android:color/black"
            android:textColorHint="#666666"
            android:minLines="3"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#7FD1C3" />

        <!-- ðŸ“¸ FOTO -->
        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:background="#DDDDDD" />

        <TextView
            android:id="@+id/txtFechaFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sin foto"
            android:textSize="12sp"
            android:textStyle="italic"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp" />

        <!-- ðŸ“‚ ACCIONES FOTO -->
        <Button
            android:id="@+id/btnGaleria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elegir de la galerÃ­a"
            android:layout_marginTop="12dp"
            android:backgroundTint="#7FD1C3" />

        <Button
            android:id="@+id/btnFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sacar foto"
            android:layout_marginTop="8dp"
            android:backgroundTint="#7FD1C3" />

        <!-- ðŸ’¾ ACCIÃ“N PRINCIPAL -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar planta"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
