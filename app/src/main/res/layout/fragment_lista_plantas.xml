<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <!-- TÃ­tulo -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis Plantas"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Buscador -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnOrdenarAZ"
            android:layout_marginEnd="12dp">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchPlantas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:queryHint="Buscar plantas"
                android:iconifiedByDefault="false"
                android:background="@android:color/transparent"/>

        </androidx.cardview.widget.CardView>

        <!-- BotÃ³n ordenar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOrdenarAZ"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="A-Z"
            android:textStyle="bold"
            android:textColor="@color/teal_primary"
            app:backgroundTint="@color/teal_light"
            app:cornerRadius="16dp"
            app:layout_constraintTop_toTopOf="@id/cardSearch"
            app:layout_constraintBottom_toBottomOf="@id/cardSearch"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- ================= BIENVENIDA ================= -->
        <!-- ================= BIENVENIDA ================= -->
        <!-- ================= BIENVENIDA ================= -->

        <ScrollView
            android:id="@+id/layoutBienvenida"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvTitulo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <!-- LOGO -->
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logo_mi_vivero_256"
                    android:scaleType="centerInside"
                    android:layout_marginBottom="16dp"/>

                <!-- TÃTULO -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â¡Bienvenid@!"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp"/>

                <!-- SUBTÃTULO -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agrega tu primera planta ðŸŒ±"
                    android:textSize="22sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"/>

                <!-- DESCRIPCIÃ“N -->
                <TextView
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:text="Empieza agregando tu primera planta para gestionarlas fÃ¡cilmente."
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="1dp"/>

                <!-- IMAGEN MACETA -->
                <ImageView
                    android:layout_width="310dp"
                    android:layout_height="310dp"
                    android:src="@drawable/ic_img_bienvenida"
                    android:scaleType="centerInside"
                    android:layout_marginBottom="1dp"/>

                <!-- BOTÃ“N -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAgregarDesdeBienvenida"
                    android:layout_width="240dp"
                    android:layout_height="70dp"
                    android:text="Agregar planta"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@color/teal_primary"
                    app:cornerRadius="14dp"/>

            </LinearLayout>

        </ScrollView>


        <!-- Lista -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPlantas"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:clipToPadding="false"
            android:paddingBottom="80dp"
            app:layout_constraintTop_toBottomOf="@id/cardSearch"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAgregarPlanta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@drawable/ic_add"
        android:backgroundTint="@color/teal_primary"
        android:tint="@android:color/white"
        app:layout_anchorGravity="bottom|end"
        app:layout_anchor="@id/recyclerPlantas"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
