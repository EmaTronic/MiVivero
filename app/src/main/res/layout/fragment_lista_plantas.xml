<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <!-- TÃ­tulo -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis Plantas"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Buscador -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="3dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnOrdenarAZ">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Buscar plantas"
                app:boxBackgroundMode="none"
                app:startIconDrawable="@drawable/ic_search"
                app:startIconTint="@color/teal_primary"
                android:paddingVertical="6dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBuscarPlantas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/text_primary"
                    android:background="@android:color/transparent"
                    android:imeOptions="actionSearch"/>

            </com.google.android.material.textfield.TextInputLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- BotÃ³n ordenar -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAgregarPlanta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Agregar planta"
            android:textAllCaps="false"
            android:textColor="@color/teal_primary"
            android:textSize="17sp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/white"
            app:cornerRadius="18dp"
            app:strokeColor="@color/teal_primary"
            app:strokeWidth="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardSearch"/>




        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOrdenarAZ"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:minWidth="0dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="A-Z"
            android:textStyle="bold"
            android:textColor="@color/teal_primary"
            app:backgroundTint="@color/teal_light"
            app:cornerRadius="16dp"
            app:layout_constraintTop_toTopOf="@id/cardSearch"
            app:layout_constraintBottom_toBottomOf="@id/cardSearch"
            app:layout_constraintEnd_toEndOf="parent"/>


        <!-- ================= BIENVENIDA ================= -->

        <ScrollView
            android:id="@+id/layoutBienvenida"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvTitulo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <!-- LOGO -->
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logo_mi_vivero_256"
                    android:scaleType="centerInside"
                    android:layout_marginBottom="16dp"/>

                <!-- TÃTULO -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â¡Bienvenid@!"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp"/>

                <!-- SUBTÃTULO -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agrega tu primera planta ðŸŒ±"
                    android:textSize="22sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"/>

                <!-- DESCRIPCIÃ“N -->
                <TextView
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:text="Empieza agregando tu primera planta para gestionarlas fÃ¡cilmente."
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="1dp"/>

                <!-- IMAGEN MACETA -->
                <ImageView
                    android:layout_width="310dp"
                    android:layout_height="310dp"
                    android:src="@drawable/ic_img_bienvenida"
                    android:scaleType="centerInside"
                    android:layout_marginBottom="1dp"/>

                <!-- BOTÃ“N -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAgregarDesdeBienvenida"
                    android:layout_width="240dp"
                    android:layout_height="70dp"
                    android:text="Agregar planta"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@color/teal_primary"
                    app:cornerRadius="14dp"/>

            </LinearLayout>

        </ScrollView>


        <!-- Lista -->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPlantas"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingBottom="120dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnAgregarPlanta"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolverEditarAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:visibility="gone"
            android:backgroundTint="@color/teal_light"
            android:text="Finalizar agregar plantas"
            android:textColor="@color/teal_primary"
            app:cornerRadius="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>
