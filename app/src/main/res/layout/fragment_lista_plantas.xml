<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis Plantas"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Buscador -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnOrdenarAZ"
            android:layout_marginEnd="12dp">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchPlantas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:queryHint="Buscar plantas"
                android:iconifiedByDefault="false"
                android:background="@android:color/transparent"/>

        </androidx.cardview.widget.CardView>

        <!-- Botón ordenar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOrdenarAZ"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="A-Z"
            android:textStyle="bold"
            android:textColor="@color/teal_primary"
            app:backgroundTint="@color/teal_light"
            app:cornerRadius="16dp"
            app:layout_constraintTop_toTopOf="@id/cardSearch"
            app:layout_constraintBottom_toBottomOf="@id/cardSearch"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Lista -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPlantas"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:clipToPadding="false"
            android:paddingBottom="80dp"
            app:layout_constraintTop_toBottomOf="@id/cardSearch"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAgregarPlanta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@drawable/ic_add"
        android:backgroundTint="@color/teal_primary"
        android:tint="@android:color/white"
        app:layout_anchorGravity="bottom|end"
        app:layout_anchor="@id/recyclerPlantas"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
