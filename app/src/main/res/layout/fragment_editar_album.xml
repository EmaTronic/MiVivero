<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2FAF8"
    android:padding="16dp">

    <!-- =========================
         HEADER ÁLBUM
         ========================= -->

    <TextView
        android:id="@+id/txtNombreAlbum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre del álbum"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#004D40"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtEstadoAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BORRADOR"
        android:textSize="14sp"
        android:textColor="#00796B"
        app:layout_constraintTop_toBottomOf="@id/txtNombreAlbum"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- =========================
         LISTA DE PLANTAS
         ========================= -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPlantasAlbum"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtEstadoAlbum"
        app:layout_constraintBottom_toTopOf="@id/layoutBotones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- =========================
         BOTONES INFERIORES
         ========================= -->

    <LinearLayout
        android:id="@+id/layoutBotones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp"
        android:background="#E0F2F1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnAgregarPlantas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Agregar plantas"
            android:textColor="#004D40"
            android:backgroundTint="#80CBC4"
            android:padding="12dp"/>

        <View
            android:layout_width="12dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btnFinalizarAlbum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Finalizar álbum"
            android:textColor="#FFFFFF"
            android:backgroundTint="#00796B"
            android:padding="12dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
