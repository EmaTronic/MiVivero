<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/txtTituloRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginBottom="24dp" />

        <!-- CAMPOS -->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Nombre real"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNombreReal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"/>

        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/etNick"
            style="@style/FormInput"
            android:hint="Nick público" />

        <EditText
            android:id="@+id/etNombreVivero"
            style="@style/FormInput"
            android:hint="Nombre del vivero" />

        <!-- PAÍS -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="País"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/spPais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"/>
        </com.google.android.material.textfield.TextInputLayout>


        <!-- PROVINCIA -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Provincia"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/spProvincia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"/>
        </com.google.android.material.textfield.TextInputLayout>


        <!-- CIUDAD -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Ciudad"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/spCiudad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"/>
        </com.google.android.material.textfield.TextInputLayout>


        <EditText
            android:id="@+id/etEmail"
            style="@style/FormInput"
            android:hint="Correo electrónico"
            android:inputType="textEmailAddress" />

        <!-- BOTÓN -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Registrar"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"
            app:cornerRadius="16dp"
            app:backgroundTint="@color/teal_primary"/>

    </LinearLayout>

</ScrollView>
