<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/txtTituloRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginBottom="24dp" />

        <!-- CAMPOS -->


        <!-- NOMBRE -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNombreReal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Nombre real"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNombreReal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:textSize="16sp"/>

        </com.google.android.material.textfield.TextInputLayout>


        <!-- NICK -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Nick público"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="16sp"/>

        </com.google.android.material.textfield.TextInputLayout>


        <!-- NOMBRE VIVERO -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNombreVivero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Nombre del vivero"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNombreVivero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:textSize="16sp"/>

        </com.google.android.material.textfield.TextInputLayout>


        <!-- PAÍS -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="País"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/spPais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:completionThreshold="2"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textSize="16sp"/>
        </com.google.android.material.textfield.TextInputLayout>


        <!-- PROVINCIA -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilProvincia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Provincia"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/spProvincia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:completionThreshold="2"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textSize="16sp"/>
        </com.google.android.material.textfield.TextInputLayout>


        <!-- CIUDAD -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCiudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Ciudad"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/spCiudad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:completionThreshold="2"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textSize="16sp"/>
        </com.google.android.material.textfield.TextInputLayout>


        <!-- EMAIL -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Correo electrónico"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textSize="16sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- BOTÓN -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Registrar"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"
            app:cornerRadius="16dp"
            app:backgroundTint="@color/teal_primary"
            android:textSize="16sp"/>

    </LinearLayout>

</ScrollView>
