<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/txtTituloRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro obligatorio"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- NOMBRE REAL -->
        <EditText
            android:id="@+id/etNombreReal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre real"
            android:inputType="textPersonName"
            android:layout_marginBottom="12dp"/>

        <!-- NICK -->
        <EditText
            android:id="@+id/etNick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nick público"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <!-- NOMBRE VIVERO -->
        <EditText
            android:id="@+id/etNombreVivero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del vivero"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <!-- PAÍS -->
        <EditText
            android:id="@+id/etPais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="País"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <!-- PROVINCIA -->
        <EditText
            android:id="@+id/etProvincia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Provincia"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <!-- CIUDAD -->
        <EditText
            android:id="@+id/etCiudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ciudad"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <!-- EMAIL -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo electrónico"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="20dp"/>

        <!-- BOTÓN -->
        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:enabled="true"/>

    </LinearLayout>

</ScrollView>
