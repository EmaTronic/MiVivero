<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/viveroFragment">

    <fragment
        android:id="@+id/viveroFragment"
        android:name="com.emanuel.mivivero.ui.fragment.ViveroFragment"
        android:label="Mi Vivero">

        <action
            android:id="@+id/action_viveroFragment_to_plantaDetalleFragment"
            app:destination="@id/plantaDetalleFragment" />
    </fragment>

    <fragment
        android:id="@+id/plantaDetalleFragment"
        android:name="com.emanuel.mivivero.ui.fragment.PlantaDetalleFragment"
        android:label="Detalle Planta">

        <argument
            android:name="plantaId"
            app:argType="long" />
    </fragment>

</navigation>
